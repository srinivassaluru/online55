<mvc:View controllerName="com.srinivas.sd.odataexamplenorthwind.controller.S1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" select="handleIconTabSelect" selectedKey="others">
                <items>
                    <IconTabFilter icon="sap-icon://hint" text="Products" key="products" count="{localModel>/listProductCount}">
                        <SearchField placeholder="Enter Product Name to Sarch" search="handleProductNameSearch" />
                        <!-- Aggregation Binding {/{path:'odataModelNorthwind>/Products'}} -->
                        <List items="{path:'odataModelNorthwind>/Products'}" id="productList" growing="true" growingThreshold="10" mode="SingleSelectMaster" selectionChange="handleProductListSelection" updateFinished="handleListUpdateFinished">
                            <items>
                                <ObjectListItem title="{path:'odataModelNorthwind>ProductName', formatter:'.online55Training.cascadeToUpper'}" number="{odataModelNorthwind>UnitPrice}">
                                    <attributes>
                                        <ObjectAttribute text="{odataModelNorthwind>ProductID} /// {odataModelNorthwind>SupplierID}" />
                                        <ObjectAttribute text="{odataModelNorthwind>SupplierID}" />
                                        <ObjectAttribute text="{odataModelNorthwind>QuantityPerUnit}" />
                                    </attributes>
                                    <firstStatus>
                                        <!-- Simple Binding-->
                                        <ObjectStatus text="{odataModelNorthwind>UnitsInStock}" />
                                    </firstStatus>
                                    <secondStatus>
                                        <!-- Complex Binding-->
                                        <ObjectStatus text="{path:'odataModelNorthwind>UnitPrice'}" state="{path:'odataModelNorthwind>UnitPrice', formatter:'.online55Training.applyStateStatus'}" />
                                        <!-- Expression Binding-->
                                        <!-- <ObjectStatus text="{path:'odataModelNorthwind>UnitPrice'}" state="{= ${odataModelNorthwind>UnitPrice} > 50 ? 'Error' : 'Success'}" /> -->
                                    </secondStatus>
                                </ObjectListItem>
                            </items>
                        </List>
                    </IconTabFilter>
                    <IconTabFilter icon="sap-icon://attachment" key="suppliers" count="{localModel>/tableSupplierCount}" text="Suppliers">
                        <Table items="{odataModelNorthwind>/Suppliers}" id="supplierTable" updateFinished="handleTableUpdateFinished">
                            <columns>
                                <Column>
                                    <Text text="SupplierID" />
                                </Column>
                                <Column>
                                    <Text text="CompanyName" />
                                </Column>
                                <Column>
                                    <Text text="ContactName" />
                                </Column>
                                <Column>
                                    <Text text="Address" />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{odataModelNorthwind>SupplierID}" />
                                        <Text text="{odataModelNorthwind>CompanyName}" />
                                        <Text text="{odataModelNorthwind>ContactName}" />
                                        <Text text="{odataModelNorthwind>Address}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                    <IconTabFilter icon="sap-icon://add-filter" key="others" text="Others" count="0">
                        <Text text="Its I want to dispaly as a default" />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
